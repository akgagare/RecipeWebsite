<h1>explore by Country</h1>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/categories">Categories</a></li>
      <li class="breadcrumb-item active" aria-current="page">Country Categories</li>
    </ol>
  </nav>

  <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">


    <% if(categoryById!='undefined'){ %>
        <% categoryById.forEach(function(recipe,index){ %>
    <a href="/recipe/<%=recipe.name %>" class="col text-center category_link">
        <div class="category__img shadow category__img--large">
            <img src="uploads/<%=recipe.image%>" alt="<%=recipe.name%>">
        </div>
        <div class="pt-1 category_link"><%=recipe.name %></div>
        <div class="pt-1 category_link"><%=recipe.email%></div>
    </a>
    <% }) %>
    <% } %>
</div>